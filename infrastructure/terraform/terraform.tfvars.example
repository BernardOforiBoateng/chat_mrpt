# Terraform Variables Example
# Copy this file to terraform.tfvars and customize for your environment

# Core Configuration
project_name = "chatmrpt"
environment  = "prod"
aws_region   = "us-east-2"

# Domain Configuration (production only)
domain_name     = "chatmrpt.com"
route53_zone_id = ""  # Add your Route53 hosted zone ID

# Lambda Memory Configuration (MB)
lambda_memory_size = {
  auth            = 128
  analysis        = 1024
  data_processing = 2048
  visualization   = 2048
  reports         = 1024
  websocket       = 256
}

# Lambda Timeout Configuration (seconds)
lambda_timeout = {
  auth            = 10
  analysis        = 300
  data_processing = 300
  visualization   = 300
  reports         = 300
  websocket       = 30
}

# DynamoDB Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"  # or "PROVISIONED" for predictable workloads
dynamodb_ttl_days     = 30

# S3 Lifecycle Configuration
s3_lifecycle_days  = 30   # Days before transitioning to IA
s3_expiration_days = 365  # Days before deletion

# Cognito Configuration
cognito_mfa                      = "OPTIONAL"  # or "ON" or "OFF"
cognito_password_minimum_length  = 12

# CloudFront Configuration
cloudfront_price_class = "PriceClass_100"  # or "PriceClass_All" for global
enable_waf            = false              # Set to true for production

# Monitoring
alarm_email        = "ops@chatmrpt.com"
log_retention_days = 30

# Resource Tags
tags = {
  Project     = "ChatMRPT"
  Environment = "Production"
  ManagedBy   = "Terraform"
  CostCenter  = "Engineering"
  Compliance  = "HIPAA-Eligible"
  Owner       = "DataTeam"
}