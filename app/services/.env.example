# ChatMRPT Environment Variables - AWS Deployment
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-make-it-long-and-random
DEBUG=False

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///instance/chatmrpt.db

# For production (PostgreSQL on AWS RDS)
# DATABASE_URL=postgresql://username:password@host:5432/database_name

# PostgreSQL Configuration (if using docker-compose with postgres)
POSTGRES_DB=chatmrpt
POSTGRES_USER=chatmrpt
POSTGRES_PASSWORD=your-postgres-password-here

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Application Configuration
MAX_CONTENT_LENGTH=33554432  # 32MB file upload limit
UPLOAD_FOLDER=instance/uploads
REPORT_FOLDER=instance/reports
LOG_FOLDER=instance/logs

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=300
GUNICORN_KEEPALIVE=2
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Visualization Features
ENABLE_VISION_EXPLANATIONS=false  # Set to true to enable AI-powered visualization explanations (requires GPT-4o)