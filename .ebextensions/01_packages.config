packages:
  yum:
    gdal-devel: []
    geos-devel: []
    proj-devel: []
    libffi-devel: []
    openssl-devel: []

commands:
  01_install_gdal:
    command: "yum install -y gdal gdal-python3"
  02_create_directories:
    command: |
      mkdir -p /opt/python/current/app/instance/uploads
      mkdir -p /opt/python/current/app/instance/reports  
      mkdir -p /opt/python/current/app/instance/logs
      mkdir -p /opt/python/current/app/instance/exports
      mkdir -p /opt/python/current/app/sessions
      mkdir -p /opt/python/current/app/data
  03_set_permissions:
    command: |
      chmod -R 777 /opt/python/current/app/instance
      chmod -R 777 /opt/python/current/app/sessions
      chmod -R 777 /opt/python/current/app/data
      chown -R webapp:webapp /opt/python/current/app/instance
      chown -R webapp:webapp /opt/python/current/app/sessions
      chown -R webapp:webapp /opt/python/current/app/data